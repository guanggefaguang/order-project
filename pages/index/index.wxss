/**index.wxss**/
.container{
  position:absolute;
  width:100%;
  height:100%;
  background:#eee;
}
.aside{
  float:left;
  height:100%;
  width:100px;
  text-align:center;
  overflow: scroll;
  background:#fff;
}
.aside::-webkit-scrollbar{
  width:0;
}
.aside .menu{
  height:40px;
  color:#333;
  font-size:14px;
  line-height:40px;
  border-top:1px solid #eee;
}
.item-content{
  float:left;
  width:calc(100% - 100px);
  height:100%;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 0 10px;
  overflow: scroll;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:80px;
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  background:#fff;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
  font-size:16px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}
.item-content .box .item .price{
  color:red;
  font-size:15px;
  margin-bottom:5px;
}
.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-10px 10px 0 0;
  padding:5px 10px;
  font-size:14px;
  color:#fff;
  background:orange;
  border-radius:20px;
}